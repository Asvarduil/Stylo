{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": ".",
      "paths": {
        "*": ["./*"],
        "@src/*": ["./src/*"],
        "@lang/*": ["./src/lang/*"],
        "@compiler/*": ["./src/compiler/*"]
      }
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"],
  }
  